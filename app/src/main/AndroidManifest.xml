<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.movies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Movies">
<!--        <activity android:name=".SplashScreen"></activity>-->

        <activity
            android:label="IMDB"
            android:parentActivityName=".Ratings"
            android:name=".IMDB"
            />
        <activity
            android:label="Rating"
            android:parentActivityName=".MainActivity"
            android:name=".Ratings"
            />
        <activity
            android:label="Search"
            android:parentActivityName=".MainActivity"
            android:name=".SearchActivity"
            />
        <activity
            android:label="Update"
            android:parentActivityName=".EditMovies"
            android:name=".UpdateMovie"
            />
        <activity
            android:label="Edit"
            android:parentActivityName=".MainActivity"
            android:name=".EditMovies"
            />
        <activity
            android:label="Favourites"
            android:parentActivityName=".MainActivity"
            android:name=".Favourites"
            />
        <activity
            android:label="Movie List"
            android:parentActivityName=".MainActivity"
            android:name=".DisplayMovies"
            />
        <activity
            android:label="Register"
            android:parentActivityName=".MainActivity"
            android:name=".RegisterActivity"
            />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>